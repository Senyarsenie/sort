#include <iostream>
#include <string>

using namespace std;



template<class t1,class t2,class t3>
void CountingSort(t1 a, t2 c, t3 n)
{
     for(int i=0;i<10000;i++){
        c[i]=0;
    }
    int z=0;
    for(int i=0;i<n;i++){
        c[a[i]]++;
        if(a[i]>z)z=a[i];
    }

int k=0;
    for(int i=0;i<z+1;i++){
        while(c[i] != 0){
            a[k]=i;
            k++;
            c[i]--;
        }
    }
}

int main()
{
    setlocale(LC_ALL,"Rus");
    int n;
    cout << "Введите размер массива: " ;
    cin >> n;
    int *a = new int [n];
     int *c = new int [10000];
     cout << "Введите  массив: " << endl ;
    for (int i = 0; i < n; i++) {
        cin >> a[i];
    }
    cout << endl;
    CountingSort(a, c, n);
    for (int i = 0; i < n; i++) {
        cout << a[i] << "\t";
    }
    cout << endl;
    return 0;
}
